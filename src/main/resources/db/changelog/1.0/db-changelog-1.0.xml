<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<!-- CREATION OF TABLE PRODUCT -->
	<changeSet id="CREATE_TABLE_PRODUCT" author="diego.saez">
		<createTable tableName="PRODUCT">
			<column name="ID" type="INT" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="NAME" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="UNITPRICE" type="DECIMAL(20,2)"></column>
			<column name="CATEGORYID" type="INT"></column>
			<column name="STOCK" type="INT" defaultOnNull="0"
				defaultValue="0"></column>
		</createTable>
		<addForeignKeyConstraint constraintName="FK_PRODUCT_CATEGORY"
			referencedTableName="CATEGORY" baseColumnNames="CATEGORYID"
			baseTableName="PRODUCT" referencedColumnNames="ID" />
	</changeSet>

	<!-- CREATION OF TABLE CATEGORY -->
	<changeSet id="CREATE_TABLE_CATEGORY" author="diego.saez">
		<createTable tableName="CATEGORY">
			<column name="ID" type="INT" autoIncrement="true">
				<constraints primaryKey="true" />
			</column>
			<column name="NAME" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

</databaseChangeLog>